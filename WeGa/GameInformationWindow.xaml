<Window x:Class="WeGa.GameInformationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Info" Height="600" Width="400" Icon="Icon.ico">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" Name="GameInfoStack">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Name="GameLetters" HorizontalAlignment="Center" Grid.Column="1" FontWeight="Bold"></Label>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Label Name="player1" Grid.Column="0"></Label>
                    <Label Name="player2" Grid.Column="1"></Label>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
