        Title="Test" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>

        <Label Content="Row 0 Column 0" Grid.Row="0" Grid.Column="0"></Label>
        <Label Content="Row 0 Column 1" Grid.Row="0" Grid.Column="1"></Label>
        <Label Content="Row 1 Column 0" Grid.Row="1" Grid.Column="0"></Label>
        <Label Content="Row 1 Column 1" Grid.Row="1" Grid.Column="1"></Label>
        <StackPanel Grid.ColumnSpan="2" Orientation="Horizontal" Height="Auto" Grid.Row="2" Width="Auto">
            <Button Content="Hey you"></Button>
            <Button Content="Hey you"></Button>
        </StackPanel>
        <Button x:Name="but" Content="Button" Grid.Column="1" HorizontalAlignment="Left" Margin="52,50,-26,-28" Grid.Row="2" VerticalAlignment="Top" Width="75"/>


    </Grid>
</Window>
