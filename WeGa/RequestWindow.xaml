<Window x:Class="WeGa.RequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RequestWindow" Height="300" Width="300">
    <Grid Name="gird">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <ListBox Name="playerList" Grid.Column="0">
            <ListBoxItem>list item text</ListBoxItem>
        </ListBox>
        <Button Grid.Row= "1" x:Name="btn"  Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top"  Click="Button_Click"  Style="{StaticResource buttonStyle}" Margin="10,8,0,0" Grid.Column="1"/>
    </Grid>
</Window>
