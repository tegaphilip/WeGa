<Window x:Class="WeGa.RequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RequestWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        
        <Label Content="Row 0 Column 0" Grid.Row="0" Grid.Column="0"></Label>
        <Label Content="Row 0 Column 1" Grid.Row="0" Grid.Column="1"></Label>
        <Label Content="Row 1 Column 0" Grid.Row="1" Grid.Column="0"></Label>
        <Label Content="Row 1 Column 1" Grid.Row="1" Grid.Column="1"></Label>
        <Label Content="Row 2 Column 0" Grid.Row="2" Grid.Column="0"></Label>
        <Button Content="Button" Grid.Column="1" HorizontalAlignment="Left" Margin="26,49,0,-20" Grid.Row="2" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
    </Grid>
</Window>
