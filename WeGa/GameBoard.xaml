<Window x:Class="WeGa.GameBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GameBoard" Height="400" Width="550">

    <DockPanel>
        <StackPanel DockPanel.Dock="Left" Height="Auto" Margin="5" VerticalAlignment="Center">
            <Button Content="Letters"/>
            <ListBox Height="Auto" Width="Auto">
                <Button Width="50" Click="btn_Letter_Click" Content="a"/>
                <Button Width="50" Click="btn_Letter_Click" Content="b"/>
                <Button Width="50" Click="btn_Letter_Click" Content="c"/>
                <Button Width="50" Click="btn_Letter_Click" Content="d"/>
                <Button Width="50" Click="btn_Letter_Click" Content="e"/>
                <Button Width="50" Click="btn_Letter_Click" Content="f"/>
                <Button Width="50" Click="btn_Letter_Click" Content="g"/>
            </ListBox>
        </StackPanel>


        <Grid Name="wordList" DockPanel.Dock="Right" Margin="10" ShowGridLines="True" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Label Content="Timer" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

        <Grid DockPanel.Dock="Top" Margin="5" Height="60">
            <Button Content="dock top"/>
        </Grid>

        <Grid DockPanel.Dock="Bottom" Margin="10">
            <Button Content="bottom"/>
        </Grid>

        <Label Content="Message:" DockPanel.Dock="Top" Name="message"/>
        <Grid Name="wordPanel" ShowGridLines="True" DockPanel.Dock="Top" Margin="0,100,0,0">
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content=""  Click="btn_word_Click"/>
            <Button Grid.Column="1" Content=""  Click="btn_word_Click"/>
            <Button Grid.Column="2" Content=""  Click="btn_word_Click"/>
            <Button Grid.Column="3" Content=""  Click="btn_word_Click"/>
            <Button Grid.Column="4" Content=""  Click="btn_word_Click"/>
            <Button Grid.Column="5" Content=""  Click="btn_word_Click"/>
            <Button Grid.Column="6" Content=""  Click="btn_word_Click"/>
            <Button Grid.Column="7" Content=""  Click="btn_word_Click"/>         
        </Grid>
        <Button Content="btnReset" Click="btnReset_Click" Width="70" Height="30"  />
        <Button Content="btnAdd" Click="btnAdd_Click" Width="70" Height="30" />
    </DockPanel>
</Window>
